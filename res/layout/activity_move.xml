<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Move" >
    
    <ListView
        android:id="@+id/moveMenu2"
        android:layout_width="400dp"
        android:layout_height="340dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/customshape" >
    </ListView>

    <ImageView
        android:id="@+id/invMoveTitle"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_above="@+id/moveMenu2"
        android:layout_alignLeft="@+id/moveMenu2"
        android:layout_marginBottom="103dp"
        android:src="@drawable/invmovemenu2" />
    
   <ProgressBar
        android:id="@+id/progBarMove"
        style="?android:attr/progressBarStyleLarge"        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shaperoundblue"
        android:layout_centerVertical="true"
        android:visibility="invisible" />    

</RelativeLayout>