<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity" >

    <ListView
        android:id="@+id/list"
        android:layout_width="400dp"
        android:layout_height="340dp"
        android:layout_below="@+id/pickupCommentsSpeechButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:background="@drawable/customshape" >
    </ListView>

    <ImageView
        android:id="@+id/pickupCommentsSpeechButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:src="@drawable/nysenatelogo" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/pickupCommentsSpeechButton"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@+id/pickupCommentsSpeechButton"
        android:src="@drawable/invapplogo" />

    
   <ProgressBar
        android:id="@+id/progBarMenu"
        style="?android:attr/progressBarStyleLarge"        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shaperoundblue"
        android:layout_centerVertical="true"
        android:visibility="invisible" />

</RelativeLayout>